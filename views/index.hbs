<div class="container">
  <h2>New Game</h2>
  <div class="container text-center">
    <form action="/newGame" method="post">
    <script type="text/javascript">
      function updateGamePreview() {
        $("#gamePreview").text(
          $("#player2 option:selected").text() + " and " +
          $("#player4 option:selected").text() + " vs. " +
          $("#player3 option:selected").text() + " and " +
          $("#player1 option:selected").text()
        );
      }
    </script>
    <div class="row">
      <div class="col d-none d-sm-block">
        <!--padding-->
      </div>
      <div class="col">
        <select name="player2" id="player2" onchange="updateGamePreview()">
          <option value="" disabled selected>Player</option>
          {{#each players}}
          <option value="{{this.id}}">{{this.name}}</option>
          {{/each}}
        </select>
        </div>
        <div class="col">
        </div>
        <div class="col">
          <select name="player3" id="player3" onchange="updateGamePreview()">
            <option value="" disabled selected>Player</option>
            {{#each players}}
            <option value="{{this.id}}">{{this.name}}</option>
            {{/each}}
          </select>
        </div>
        <div class="col d-none d-sm-block">
          <!--padding-->
        </div>
        </div>
        <div class="row">
          <div class="col d-none d-sm-block">
            <!--padding-->
          </div>
          <div class="col">
            üç∫
          </div>
          <div class="col">
            ‚Üî
          </div>
          <div class="col">
            üç∫
          </div>
          <div class="col d-none d-sm-block">
            <!--padding-->
          </div>
        </div>
        <div class="row">
          <div class="col d-none d-sm-block">
            <!--padding-->
          </div>
          <div class="col">
            <select name="player1" id="player1" onchange="updateGamePreview()">
              <option value="" disabled selected>Player</option>
              {{#each players}}
              <option value="{{this.id}}">{{this.name}}</option>
              {{/each}}
            </select>
        </div>
        <div class="col">
        </div>
        <div class="col">
          <select name="player4" id="player4" onchange="updateGamePreview()">
            <option value="" disabled selected>Player</option>
            {{#each players}}
            <option value="{{this.id}}">{{this.name}}</option>
            {{/each}}
          </select>
        </div>
        <div class="col d-none d-sm-block">
          <!--padding-->
        </div>
        </div>
        <!-- center text-->
        <div class="row">
          <p id="gamePreview" class="text-center">
            Player and Player vs. Player and Player
          </p>
        </div>
        <div class="row">
          <div class="col">
            <button type="submit">New Game</button>
          </div>
          </div>
        </form>
  </div>

  {{#if activeGames.length}}
  <h2> Active Games</h2>
  <ul>
    {{#each activeGames}}
    <li>
      <a href="/game/{{this.id}}">Game {{this.id}}</a>
    </li>
    {{/each}}
  </ul>
  {{/if}}

  {{#if concludedGames.length}}
  <h2>Concluded Games</h2>
  <ul>
    {{#each concludedGames}}
    <li>
      <a href="/game/{{this.id}}">Game {{this.id}}</a>
    </li>
    {{/each}}
  </ul>
  {{/if}}
</div>