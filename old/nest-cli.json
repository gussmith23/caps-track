{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "../views",
        "outDir": "dist/views",
        "watchAssets": true
      },
      {
        "include": "../config",
        "outDir": "dist/config",
        "watchAssets": true
      },
      {
        "include": "../public",
        "outDir": "dist/public",
        "watchAssets": true
      },
      {
        "include": "../assets/style.css",
        "outDir": "dist/public/css",
        "watchAssets": true
      },
      {
        "include": "../node_modules/bootstrap/dist/js/**/*",
        "outDir": "dist/public/js",
        "watchAssets": true
      }
    ]
  }
}