{
  "name": "2025-caps-nationals",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "css-once": "node_modules/.bin/sass scss/style.scss assets/style.css",
    "css-watch": "npm run css-once && node_modules/.bin/sass scss/style.scss assets/style.css --watch",
    "build": "npm run css-once && nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "echo \"stackoverflow suggested npm run css-watch && nest start, but that doesn't seem right. disabled for now, use start:dev/debug/prod\" && exit 1",
    "start:dev": "concurrently --kill-others \"npm run css-watch\" \"nest start --watch\"",
    "start:debug": "concurrently --kill-others \"npm run css-watch\" \"nest start --debug --watch\"",
    "start:prod": "npm run css-once && node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --setupFiles dotenv/config",
    "test:watch": "jest --setupFiles dotenv/config --watch",
    "test:cov": "jest --setupFiles dotenv/config --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest   --setupFiles dotenv/config  --runInBand",
    "test:e2e": "jest --setupFiles dotenv/config --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/platform-express": "^10.0.0",
    "bootstrap": "^5.3.3",
    "date-fns": "^4.1.0",
    "dotenv": "^16.5.0",
    "express-handlebars": "^8.0.1",
    "google-auth-library": "^9.15.0",
    "google-spreadsheet": "^4.1.4",
    "hbs": "^4.2.0",
    "postgres": "^3.4.7",
    "postgres-date": "^2.1.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "concurrently": "^9.1.2",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "sass": "^1.83.4",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
